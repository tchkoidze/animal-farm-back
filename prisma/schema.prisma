// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}


model Animal {
  id        String @id @default(uuid())
  name      String
  type      String
  thanks    Int    @default(0)
}

model PigStatus {
  id        String @id @default(uuid())
  status    String
}